
@{
    ViewBag.Title = "Index";
}
<script src="~/Content/Pages/jquery-3.5.1.min.js"></script>
<script src="~/Content/Pages/Reminder.js"></script>

<h2>Reminder Registration Form</h2>

<div class="col-md-12">

    <div class="col-md-6">
        <div class="form-group">
            <input id="hdnReminderId type=" text" " name="ReminderId" class="form-control " readonly />
        </div>
        <div class="form-group">
            <input id="txtReminderText" type="text" placeholder="Enter Reminder Text" class="form-control" />
        </div>
        <div class="form-group">
            <input id="txtDescription " type="text" placeholder="Enter Description of the Reminder" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <input id="txtStartTime" type="text" placeholder="Enter Start Time  of Reminder" class="form-control" />
        </div>
        <div class="form-group">
            <input id="txtEndTime" type="text" placeholder="Enter End Time of Reminder" class="form-control" />
        </div>
        <div class="form-group">
            <input id="txtElderPersonId" type="text" placeholder="Enter Elder Person's Id" class="form-control" />
        </div>
    </div>

</div>
<button id="btnSave" value="submit" onclick=saveRegistration()>SAVE</button>

<div class="col-sm-12" style="margin-left: -154px;">
    <table id="tblReminder" border=" 1" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <th>ReminderId</th>
        <th>Elder Person Id</th>
        <th>Reminder Text</th>
        <th>Description</th>
        <th>Start Time</th>
        <th>End Time</th>
        </thead>
        <tbody></tbody>
    </table>
</div>