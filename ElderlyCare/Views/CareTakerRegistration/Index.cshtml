
@{
    ViewBag.Title = "Index";
}

<h2>Care Taker Registration Form</h2>

<script src="~/Content/Pages/jquery-3.5.1.min.js"></script>
<script src="~/Content/Pages/CareTaker.js"></script>

<div class="col-md-12">

    <div class="col-md-6">
        <div class="form-group">
            <input id="hdnCareTakerId type=" text" " name="CareTakerId" class="form-control " readonly />
        </div>
        <div class="form-group">
            <input id="txtName" type="text" placeholder="Enter Care Taker Name" class="form-control" />
        </div>
        <div class="form-group">
            <input id="txtAge" type="text" placeholder="Enter Care Taker Age" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <input id="txtContactno" type="text" placeholder="Enter Care Taker Contact No." class="form-control" />
        </div>
        <div class="form-group">
            <input id="txtAddress" type="text" placeholder="Enter Address" class="form-control" />
        </div>
        <div class="form-group">
            <input id="txtPatientRelation" type="text" placeholder="Enter Relation with Patient" class="form-control" />
        </div>
    </div>
    
</div>
<button id="btnSave" value="submit" onclick=saveRegistration()>SAVE</button>


<div class="col-sm-12" style="margin-left: -154px;">
    <table id="tblCareTaker" border=" 1" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <th>CareTakerId</th>
        <th>Name</th>
        <th>Age</th>
        <th>Contact No</th>
        <th>Address</th>
        <th>Patient Relation</th>
        </thead>
        <tbody></tbody>
    </table>
</div>